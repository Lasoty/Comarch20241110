@page "/"


<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app. Current main value = @lastMultipleOfThree.

<MyFirstComponent @bind-CurrentValue="@lastMultipleOfThree" />

<Counter OnMultipleOfThree="OnMultipleOfThreeCalled"  />

@code
{
    int lastMultipleOfThree = 0;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        Console.WriteLine("Hello World!");
    }

    private void OnMultipleOfThreeCalled(int count)
    {
        lastMultipleOfThree = count;
    }
}
